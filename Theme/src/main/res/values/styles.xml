<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Red" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/redColorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/redColorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/redColorAccent</item>
    </style>

    <style name="AppTheme.Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blueColorPrimary</item>
        <item name="colorPrimaryDark">@color/blueColorPrimaryDark</item>
        <item name="colorAccent">@color/blueColorAccent</item>
    </style>

    <!-- ========================= -->
    <!-- Action bar/toolbar styles -->
    <!-- ========================= -->
    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- force subtitle text color for v21+ -->
    </style>
    <style name="AppToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="searchViewStyle">@style/AppToolbarSearchView</item>
    </style>

    <!-- ================== -->
    <!-- Search view styles -->
    <!-- ================== -->
    <style name="AppToolbarSearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="queryHint">Search</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
</resources>